{
    "name": "family-rewards-root",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "setup": "npm install --prefix backend && npm install --prefix frontend",
        "build": "npm run build --prefix frontend && npm run build --prefix backend",
        "db:init": "npm run prisma:generate --prefix backend && npm run prisma:migrate --prefix backend",
        "start": "node backend/dist/index.js",
        "prod:start": "node index.js",
        "panel": "npx tsx backend/src/terminal/index.ts"
    },
    "dependencies": {
        "@fastify/cors": "^11.2.0",
        "@fastify/static": "^9.0.0",
        "@prisma/client": "^5.10.2",
        "chalk": "^4.1.2",
        "commander": "^12.0.0",
        "dotenv": "^16.4.5",
        "fastify": "^5.6.2",
        "grammy": "^1.20.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "prisma": "^5.10.2",
        "tsx": "^4.7.1"
    }
}